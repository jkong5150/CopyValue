<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ibloc xmlns="http://www.irise.com/schema/ibloc" type="action" namespace="irise" name="CopyValue" version="1.3" productVersion="8.7">
    <displayName>Copy value</displayName>
    <description>Copy the value of a widget to another widget on the page without refresh</description>
    <canvasImage>resources/images/Copy.png</canvasImage>
    <iconImage>resources/images/Copy.png</iconImage>
  <metadata>
  	<createdBy>Jeff Kongthong</createdBy>
	<supportedBrowsers>IE v7, IE v8, Firefox v4.0, Safari, Chrome, Opera</supportedBrowsers>
	<connectionRequired>false</connectionRequired>
	<helpUrl>https://idn.irise.com</helpUrl>
	<supportNumber>1-866-361-3900</supportNumber>
	<supportUrl>http://www.irise.com/support</supportUrl>
	<releaseDate>2011-10-04</releaseDate>
  </metadata>
  	<properties>
        <property name="source" editable="true" required="false">
            <displayName>Source widget</displayName>
            <description>Choose the source widget</description>
            <editor name="widgetChooser"/>
            <validators/>
		</property> 
        <property name="destination" editable="true" required="false">
            <displayName>Destination widget</displayName>
            <description>Choose the destination widget</description>
            <editor name="widgetChooser" multiValue="true" />
            <validators/>
        </property>  
    </properties>
    <preload>
          <scripts>
              <script src="/iblocs/irise/CopyValue/1.3/javascript/copyValue.js"></script>
          </scripts>
  </preload>
</ibloc>
